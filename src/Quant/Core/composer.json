{
    "name": "quant/core",
    "type": "library",
    "description": "Low-level API providing contracts and base implementations for PHP projects.",
    "keywords": ["framework"],
    "homepage": "https://quant-php.dev/docs/packages/quant/core",
    "license": "MIT",
    "authors": [
        {
            "name": "Thorsten Suckow-Homberg",
            "email": "thorsten@suckow-homberg.de",
            "homepage": "https://thorsten.suckow-homberg.de"
        }
    ],
    "require": {
        "php": "^8.2",
        "composer-runtime-api": ">=2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.1",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7",
        "phpbench/phpbench": "^1.2@dev",
        "doctrine/annotations": "2.0.x-dev",
        "phpstan/extension-installer": "^1.3",
        "quant/phpstan": "dev-main"
    },
    "autoload": {
        "psr-4": { "Quant\\Core\\": "" },
        "exclude-from-classmap": [
            "/Tests/"
        ]
    },
    "minimum-stability": "dev",
    "config": {
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
